{
  "name": "whatsappdesktopbot",
  "version": "1.1.0",
  "description": "WhatsApp Bot for VPS (Node.js + Baileys)",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "dist": "echo \"Electron build disabled on VPS setup\""
  },
  "build": {
    "appId": "com.ahmad.whatsappbot",
    "productName": "WhatsApp Desktop Bot",
    "directories": {
      "output": "dist"
    },
    "asar": false,
    "files": [
      "main.js",
      "preload.js",
      "bot.js",
      "renderer/**/*",
      "sessions/**/*"
    ],
    "extraResources": [],
    "win": {
      "icon": "build/icon.png",
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.11",
    "express": "^4.19.2",
    "pino": "^9.5.0",
    "qrcode": "^1.5.4"
  }
}
